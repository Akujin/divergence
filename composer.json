{
    "name": "divergence/divergence",
    "description": "The Divergence Framework.",
    "keywords": ["framework", "divergence"],
    "type": "project",
    "require": {
        "php": ">=7.1",
        "dwoo/dwoo": "1.3.6",
        "filp/whoops": ">=2.1.14",
        "symfony/var-dumper": "^4.0"
    }
    ,"autoload": {
	    "psr-4": {
		    "App\\": "classes/App"
		    ,"Divergence\\": "classes/Divergence"
	    }
    },
    "autoload-dev": {
        "psr-4": {
            "Divergence\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "*"
    },
    "scripts": {
        "fix-code": "php-cs-fixer fix",
        "test": "vendor/bin/phpunit"
    }
}
